<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView

        android:id="@+id/cardView"
        android:layout_width="325dp"
        android:layout_height="170dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="10dp"

        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNameProv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Jawa Tengah"
                android:textColor="@color/black"
                android:textSize="18sp" />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tvNameProv"
              android:orientation="horizontal"
              android:weightSum="3"
              android:id="@+id/lnImgProv"
              >

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:src="@drawable/icon_positif"
           android:layout_weight="1"/>
              <ImageView
                  android:id="@+id/imgSembuhProv"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:src="@drawable/icon_sembuh"
                  android:layout_weight="1"
                  />
              <ImageView

                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:src="@drawable/icon_meninggal"
                  android:layout_weight="1"
                  />
          </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/lnImgProv"
                android:id="@+id/lnTvProv"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Positif"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sembuh"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meninggal"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnTvProv"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <TextView
                    android:id="@+id/tvPositifProv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Positif"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/colorPositif"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvSembuhProv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sembuh"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/colorSembuh"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvMeninggalProv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meninggal"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/colorMeninggal"
                    android:layout_weight="1"/>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>