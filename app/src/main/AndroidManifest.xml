<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.coronalive">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.InfoActivity" />
        <activity android:name=".Activities.SimpstompsActivity" />
        <activity android:name=".Activities.ProvinceCoronaData" />
        <activity android:name=".Activities.LiveCoronaData" />
        <activity android:name=".Activities.DetailActivityHospital" />
        <activity android:name=".Activities.HospitalActivity" />
        <activity android:name=".Activities.DetailActivityNews" />
        <activity android:name=".Activities.NewsActivity" />
        <activity android:name=".Activities.ListPrevention" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>

            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>